{
  "include": [
    "src/**/*",
    "type-overrides/cyclic-db.d.ts"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "module": "NodeNext",
    "target": "ESNext",
    "lib": [
      "ESNext"
    ],
    "strict": true,
    "incremental": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "tsBuildInfoFile": "./node_modules/build/.tsbuildinfo"
  },
  "references": [
    {
      "path": "scripts/tsconfig.json"
    }
  ]
}