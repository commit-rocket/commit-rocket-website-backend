{
  "include": [
    "./**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "module": "NodeNext",
    "target": "ESNext",
    "lib": [
      "ESNext"
    ],
    "strict": true,
    "incremental": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
  }
}